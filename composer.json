{
    "name": "rinvex/widgets",
    "description": "Widget registering with automatic resolving and integration with Cluster Extensions.",
    "keywords": [
        "rinvex",
        "cluster",
        "laravel",
        "widgets"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Rinvex LLC",
            "email": "help@rinvex.com"
        },
        {
            "name": "Abdelrahman Omran",
            "email": "me@omranic.com",
            "role": "Project Lead"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.rinvex.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "rinvex/extensions": "1.0.*",
        "illuminate/container": "~4"
    },
    "require-dev": {
        "mockery/mockery": "0.7.2"
    },
    "autoload": {
        "psr-4": {
            "Rinvex\\Widgets\\": "src/"
        }
    },
    "extra": {
        "component": "package",
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev"
}
